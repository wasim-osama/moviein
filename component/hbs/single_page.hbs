<div class="single-page py-2 d-flex align-items-center position-relative"
     style="background-image: url('https://www1.yts.nz{{Movie.background_image_original}}')">
    <div class="overlay"></div>
    <div class="container py-3 text-white position-relative z-1">
        <div class="row">
            <div class="col-md-6 py-4">
                <div class="w-100">
                    <div class="fs-1 fw-normal pb-2">{{Movie.title_english}}</div>
                    <div class="rating-info-zone d-flex">
                        <div class="">
                            <i class="las la-star text-danger pe-2"></i>
                            {{Movie.rating}}
                        </div>
                        <div class="text-white-50">&#x2022;</div>
                        <div class="">
                            {{Movie.year}}
                        </div>
                        <div class="text-white-50">&#x2022;</div>
                        <div class="">
                            {{#each Movie.genres}}
                                {{#if (ifCond @index '<' '4')}}
                                    <span class="badge bg-success fw-normal">{{this}}</span>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="w-100">
                    <p class="fs-6 text-white-50 fw-bold m-0 py-3">
                        {{trimString Movie.description_intro 0 300 }}..
                    </p>
                    <div class="text-danger fs-4">
                        <i class="las la-heart"></i>
                        <span class="text-light ps-2 fs-5">{{Movie.like_count}}</span>
                    </div>
                    <div class="text-danger fs-4">
                        <i class="las la-clock"></i>
                        <span class="text-light ps-2 fs-5">{{minTohour Movie.runtime}}</span>
                    </div>
                    <div class="text-danger fs-4">
                        <i class="las la-language"></i>
                        <span class="text-light ps-2 fs-5 text-uppercase">{{Movie.language}}</span>
                    </div>
                </div>
                <div class="position-relative">
                    <button href="" class="btn btn-danger rounded rounded-5 fs-6 fw-bold py-2 px-3 my-2"
                            id="downloadBtn">
                        <i class="las la-download"></i>
                        Download
                    </button>
                    <div class="position-absolute rounded rounded-3 bg-light download-overlay" id="download-overlay">
                        <div class="text-right w-100 d-flex justify-content-end">
                            <button id="downloadBtnClose" class="border-0 pe-3 pt-3 rounded rounded-3"><i
                                    class="las la-times"></i></button>
                        </div>
                        <div class="d-flex align-items-center w-100 h-100 text-center px-4  mb-5 mt-4 justify-content-around">
                            {{#each Movie.torrents}}
                                <div class="w-100 text-dark">
                                    <div class="fs-4 fw-bold pb-2">Quality</div>
                                    <div class="fs-5 pb-2">{{this.quality}}</div>
                                    <div class="fs-4 fw-bold pb-2">Size</div>
                                    <div class="fs-5 pb-2">{{this.size}}</div>
                                    <a href="https://www1.yts.nz{{this.url}}"
                                       class="btn btn-danger rounded rounded-5 py-2 px-3" style="font-size: 12px;">
                                        <i class="las la-download"></i>
                                        Download
                                        <span class="small text-white-50 fw-lighter">{{this.quality}}</span>
                                    </a>
                                </div>
                                <div class="vr bg-dark mx-3"></div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-custom text-light w-100  m-auto shadow-cus">
                    <div class="image w-100">
                        <img src="https://www1.yts.nz{{Movie.large_cover_image}}" alt="" class="w-100 h-100">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="w-100 py-5">
        <div class="container">
            <div class="h3 fw-bold fst-italic py-3 ps-2 mb-3 text-white text-center">Cast</div>
            <div class="row">
                {{#each Movie.cast}}
                    <div class="col-sm-3 col-6 py-2">
                        <div class="d-flex flex-column align-items-center text-light">
                            <div class="h6 text-center fw-light">{{this.character_name}}</div>
                            <img src="https://www1.yts.nz/{{this.url_small_image}}" onerror="this.src='assets/img/poster.jpg';" class="rounded-circle my-2" style="height: 80px; width: 80px;">
                            <div class="h5 text-center">{{this.name}}</div>
                        </div>
                    </div>
                {{/each}}

            </div>
            <div class="h3 fw-bold fst-italic py-3 ps-2 mb-3 text-center text-white">Overview</div>
            <div class="row">
                <div class="col-md-4">
                    <iframe class="border-2 border-danger border rounded-1" width="100%" height="100%" src="https://www.youtube.com/embed/{{Movie.yt_trailer_code}}"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            allowfullscreen>

                    </iframe>
                </div>
                <div class="col-md-4">
                    <img src="https://www1.yts.nz/{{Movie.large_screenshot_image1}}" alt="" data-fancybox="gallery"
                         class="w-100 border-2 border-danger border rounded-1">
                </div>
                <div class="col-md-4">
                    <img src="https://www1.yts.nz/{{Movie.large_screenshot_image2}}" alt="" data-fancybox="gallery"
                         class="w-100 border-2 border-danger border rounded-1">
                </div>
            </div>
        </div>
    </div>
</div>